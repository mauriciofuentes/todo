package tareas;

public class jerarquia {

	public static void main(String[] args) {
			//Ascendente:
			System.out.println("Menor a mayor:");
			for (int i=1; i<5; i++){
				for (int a=0; a<i; a++){
					System.out.print("*");	
				}
				System.out.println("");
			}
				//Descendente:
			System.out.println("");
			System.out.println("Mayor a menor:");
			for (int i=4; i>0; i--){
				for (int a=i; a<4; a--){
				}
					System.out.print("*");
			}
					System.out.println("");
	}

}